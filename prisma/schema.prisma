generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Reviews{
    id String @id @default(uuid())
    booking_id String
    tutor_id String
    student_id String
    rating Int 
    comment String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    @@index([rating])
    @@index([tutor_id])
}
